{
  "mcpVersion": "2025-06-18",
  "name": "mcp-google-ads",
  "version": "1.0.0",
  "description": "Read-only Google Ads MCP server for marketing performance data",
  "tools": [
    {
      "name": "get_accounts",
      "description": "List all accessible Google Ads customer accounts",
      "inputSchema": {
        "type": "object",
        "properties": {
          "user_credentials": {
            "type": "object",
            "description": "User-specific OAuth credentials",
            "properties": {
              "refresh_token": {
                "type": "string",
                "description": "User OAuth refresh token (REQUIRED)"
              },
              "login_customer_id": {
                "type": "string",
                "description": "Manager account ID (optional, for MCC accounts)"
              }
            },
            "required": ["refresh_token"]
          }
        },
        "required": ["user_credentials"],
        "additionalProperties": false
      }
    },
    {
      "name": "get_campaigns",
      "description": "Retrieve campaigns for specified accounts and date range",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account_ids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of customer IDs (e.g., ['1234567890']). If omitted, uses default account."
          },
          "date_range": {
            "type": "object",
            "properties": {
              "preset": {
                "type": "string",
                "enum": ["LAST_7_DAYS", "LAST_30_DAYS", "MTD", "YTD"],
                "description": "Preset date range"
              },
              "start_date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "Start date in YYYY-MM-DD format"
              },
              "end_date": {
                "type": "string",
                "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
                "description": "End date in YYYY-MM-DD format"
              }
            },
            "required": []
          },
          "campaign_ids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Optional filter by specific campaign IDs"
          },
          "timezone": {
            "type": "string",
            "description": "Timezone for date range (default: Asia/Kolkata)",
            "default": "Asia/Kolkata"
          },
          "user_credentials": {
            "type": "object",
            "description": "User-specific OAuth credentials",
            "properties": {
              "refresh_token": {
                "type": "string",
                "description": "User OAuth refresh token (REQUIRED)"
              },
              "login_customer_id": {
                "type": "string",
                "description": "Manager account ID (optional)"
              }
            },
            "required": ["refresh_token"]
          }
        },
        "required": ["date_range", "user_credentials"]
      }
    },
    {
      "name": "get_ads",
      "description": "Retrieve ads for specified accounts and date range",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account_ids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "List of customer IDs"
          },
          "date_range": {
            "type": "object",
            "properties": {
              "preset": {
                "type": "string",
                "enum": ["LAST_7_DAYS", "LAST_30_DAYS", "MTD", "YTD"]
              },
              "start_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
              "end_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
            }
          },
          "campaign_ids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Optional filter by campaign IDs"
          },
          "ad_ids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Optional filter by specific ad IDs"
          },
          "timezone": {
            "type": "string",
            "default": "Asia/Kolkata"
          },
          "user_credentials": {
            "type": "object",
            "description": "User-specific OAuth credentials",
            "properties": {
              "refresh_token": {
                "type": "string",
                "description": "User OAuth refresh token (REQUIRED)"
              },
              "login_customer_id": {
                "type": "string",
                "description": "Manager account ID (optional)"
              }
            },
            "required": ["refresh_token"]
          }
        },
        "required": ["date_range", "user_credentials"]
      }
    },
    {
      "name": "get_report",
      "description": "Get normalized performance report with metrics at specified level (ACCOUNT, CAMPAIGN, or AD)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "account_ids": {
            "type": "array",
            "items": { "type": "string" }
          },
          "date_range": {
            "type": "object",
            "properties": {
              "preset": {
                "type": "string",
                "enum": ["LAST_7_DAYS", "LAST_30_DAYS", "MTD", "YTD"]
              },
              "start_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
              "end_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
            }
          },
          "level": {
            "type": "string",
            "enum": ["ACCOUNT", "CAMPAIGN", "AD"],
            "description": "Reporting level"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "spend", "impressions", "clicks", "conversions", "conversion_value",
                "ctr", "cpc", "cpm", "cpa", "roas"
              ]
            },
            "description": "Metrics to include in response"
          },
          "filters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": { "type": "string" },
                "op": { "type": "string", "enum": ["IN", "EQ", "GT", "LT"] },
                "values": { "type": "array" }
              }
            }
          },
          "breakdowns": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Dimensions for breakdown (e.g., ['date'])"
          },
          "timezone": {
            "type": "string",
            "default": "Asia/Kolkata"
          },
          "paging": {
            "type": "object",
            "properties": {
              "limit": { "type": "number", "default": 500, "maximum": 10000 },
              "cursor": { "type": "string" }
            }
          },
          "user_credentials": {
            "type": "object",
            "description": "User-specific OAuth credentials",
            "properties": {
              "refresh_token": {
                "type": "string",
                "description": "User OAuth refresh token (REQUIRED)"
              },
              "login_customer_id": {
                "type": "string",
                "description": "Manager account ID (optional)"
              }
            },
            "required": ["refresh_token"]
          }
        },
        "required": ["date_range", "level", "user_credentials"]
      }
    },
    {
      "name": "get_rate_limit_status",
      "description": "Get current rate limit status and quotas",
      "inputSchema": {
        "type": "object",
        "properties": {
          "user_credentials": {
            "type": "object",
            "description": "User-specific OAuth credentials",
            "properties": {
              "refresh_token": {
                "type": "string",
                "description": "User OAuth refresh token (REQUIRED)"
              },
              "login_customer_id": {
                "type": "string",
                "description": "Manager account ID (optional)"
              }
            },
            "required": ["refresh_token"]
          }
        },
        "required": ["user_credentials"],
        "additionalProperties": false
      }
    },
    {
      "name": "healthcheck",
      "description": "Check API connectivity and return server version",
      "inputSchema": {
        "type": "object",
        "properties": {
          "user_credentials": {
            "type": "object",
            "description": "User-specific OAuth credentials",
            "properties": {
              "refresh_token": {
                "type": "string",
                "description": "User OAuth refresh token (REQUIRED)"
              },
              "login_customer_id": {
                "type": "string",
                "description": "Manager account ID (optional)"
              }
            },
            "required": ["refresh_token"]
          }
        },
        "required": ["user_credentials"],
        "additionalProperties": false
      }
    }
  ]
}
